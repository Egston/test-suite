#!/bin/bash

# test: Test debops-playbooks common playbook
# Copyright (C) 2014 Nick Janetakis <nick.janetakis@gmail.com>
# Part of the DebOps project - http://debops.org/


sudo hostname travis.example.com


. "${ROLESPEC_LIB}/main"
. "${ROLESPEC_TEST}/../defaults.conf"


install_ansible ${test_ansible_version}
ansible_plugins


ansible-galaxy install -r /home/travis/build/debops/debops-playbooks/galaxy/requirements.txt


ansible-playbook -i 'travis.example.com,' -c local /home/travis/build/debops/debops-playbooks/playbooks/site.yml

