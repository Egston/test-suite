. "${ROLESPEC_LIB}/main"


install_ansible


if [[ -n "${ROLESPEC_TRAVIS}" ]]; then
  __rvm unload ; rm -rf ~/.rvm
fi


assert_playbook_runs
assert_playbook_idempotent


assert_in "$(ruby -v)" "ruby"
