#!/bin/bash

# test: Test debops.gitlab
# Copyright (C) 2014 Nick Janetakis <nick.janetakis@gmail.com>
# Part of the DebOps project - http://debops.org/


. "${ROLESPEC_LIB}/main"
. "${ROLESPEC_TEST}/../defaults.conf"


# Add Ruby 2.1 PPA and Golang PPA
sudo apt-get -yq install python-software-properties
sudo apt-add-repository -y ppa:brightbox/ruby-ng
sudo add-apt-repository -y ppa:evarlast/golang1.4
sudo apt-get -yq update
sudo apt-get -yq install ruby2.1 ruby2.1-dev golang golang-go

echo "go version"
go version

echo "go env"
go env

echo "Nuke the gimmie directory"
rm -rfv /home/travis/.gimmie

echo "travis go env"
sudo -u travis go env

echo "List home directory"
ls -la /home/travis

#install_ansible ${test_ansible_version}
install_ansible devel
ansible_plugins


ansible-galaxy -f install debops.mariadb_server


assert_playbook_check_runs
assert_playbook_idempotent_long


# GitLab needs some time to start up
sleep 15


assert_url "http://localhost.localdomain/users/sign_in"

