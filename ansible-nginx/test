#!/bin/bash

# test: Test debops.nginx
# Copyright (C) 2014 Nick Janetakis <nick.janetakis@gmail.com>
# Part of the DebOps project - http://debops.org/


. "${ROLESPEC_LIB}/main"
. "${ROLESPEC_TEST}/../defaults.conf"


install_ansible ${test_ansible_version}
ansible_plugins


ansible-galaxy install -f debops.pki


node "${ROLESPEC_TEST}/test_files/server" &
sleep 3
chmod 777 /tmp/nodeserver.sock


assert_playbook_runs
assert_playbook_idempotent


# Fixing the test
echo domain
ls -l /etc/pki/domain/CA
echo system-certs
ls -l /usr/local/share/ca-certificates
echo "URL: ${ROLESPEC_FQDN}"

assert_url "http://${ROLESPEC_FQDN}:8080" 307
assert_url "https://${ROLESPEC_FQDN}"


kill -9 "$(pidof node)"
