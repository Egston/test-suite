#!/bin/bash

# test: Test debops.monit
# Copyright (C) 2014 Nick Janetakis <nick.janetakis@gmail.com>
# Part of the DebOps project - http://debops.org/


. "lib/test"

role_dependencies debops.apt_preferences debops.etc_services

assert_playbook_runs
assert_playbook_idempotent


assert_monitoring "ssh"

assert_in_file "/etc/monit/conf.d/base_ssh.conf" "timeout 30 seconds"
assert_in_file "/etc/monit/conf.d/base_ssh.conf" "cpu"

assert_playbook_runs --extra-vars '{"monit_process_list":[{"pid":"sshd.pid","delete":"true"}]}'

assert_monitoring "ssh" !
