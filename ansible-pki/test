#!/bin/bash

# test: Test debops.pki
# Copyright (C) 2014 Nick Janetakis <nick.janetakis@gmail.com>
# Part of the DebOps project - http://debops.org/


. "${ROLESPEC_LIB}/main"


install_ansible


assert_playbook_runs
assert_playbook_idempotent


assert_path "/srv/pki/ca"
assert_path "/srv/pki/host"
assert_path "/srv/pki/wildcard"

assert_in_file "/srv/pki/host/selfsigned/${ROLESPEC_FQDN}.crt" "CERTIFICATE"
assert_in_file "/srv/pki/host/private/${ROLESPEC_FQDN}.key" "PRIVATE KEY"
